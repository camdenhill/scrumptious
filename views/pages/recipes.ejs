<body ng-app="app">
	<div class="lightbox">
		<p class="lightbox-text">Click ESC to exit full screen.</p>
	</div>
	<% include ../partials/nav %>

	<div class="upper">	<!--Contains icon, title, rating, comments icon, prompt to serve #, dropdown serve #-->
		<!-- <img src="/img/Pie.png"> -->
		<h1><%= recipeName %></h1>
		
		<div class="stars-and-comment">
			<p class="rating-bar"></p>
			<img src="/img/Stars.png">
			<img src="/img/Comment.png">
		</div>

		<div class="how-many-serve">
			<p>How many people do you want to serve?</p>
			<select>
				<% for(var i=0; i<=12; i++) { %>
					<option><%= i %></option>
				<% } %>
			</select>
		</div>
	</div>

	<div class="full-width">
		<button id="images">Image Gallery</button>
		<button id="traditional">Read in traditional format</button>
	</div>

	<div class="gantt" id="gantt">			<!--Contains ingredients and Gantt chart-->
		<div class="ingredients" id="ingredients">		<!--Ingredients list-->
			<h3>Ingredients</h3>
			<ul>	<!--Will eventually be node/angular for/repeat-->
				<% ingredients.forEach(function(ingredient) { %>
					<li class="ingredient"><strong><%= ingredient.quantity %></strong> <%= ingredient.item %></li>
				<% }); %>
			</ul>
		</div>
		<div class="chart" id="chart">		<!--Gantt chart-->
				<img class="expand" id="expand" src="/img/Expand.png"/>
<!-- 			<div class="intervals" id="intervals">
				<div class="interval"></div>
				<div class="interval"></div>
			</div>
 -->			<div class="start-cooking-at">	<!--Starting cooking at...-->
				<h6>Start cooking at <span class="underline"><%= time %></span></h6>
				<button>Pause</button>
			</div>
			<div>	<!--Timeline-->
				<% steps.forEach(function(step) { %>
					<p class="step" style="margin-left: <%- 1000*(parseFloat(step.stepStart.split(":")[1])/42) %>px; min-width: 200px; width: <%- 1000*(parseFloat(step.stepDuration.split(" ")[0])/42) %>px"><%= step.stepText %><br/><span class="step-duration"><%= step.stepDuration %></span></p>
				<% }); %>
				<p class="source"><%= source %></p>
			</div>
		</div>
	</div>


