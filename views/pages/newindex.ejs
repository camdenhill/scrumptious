<!DOCTYPE html>
<html>
<head>
	<title>The New Cookbook</title>
	<link href="/css/parent.css" rel="stylesheet" type="text/css"/>
	<link href="/css/style.css" rel="stylesheet" type="text/css"/>
	<link href="/css/nav.css" rel="stylesheet" type="text/css"/>
	<link href="/css/newindex.css" rel="stylesheet" type="text/css"/>
	<link href="/css/font-awesome.min.css" rel="stylesheet">

	<link href="/img/Favicon.png" rel="icon"/>

	<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
	<script src="/js/categories.js"></script>
</head>

<body>
	<% include ../partials/nav %>
	<!-- Includes the top scrolling and 4 featured per category -->
	<div id="categories-and-recipes">
		<!-- Includes scrolling category -->
		<div id="top-scroll">
			<div id="left">
				<img src="/img/Left.png"/>
			</div>

			<div id="categories">
				<% categories.forEach(function(category) { %>
					<div class="category">
						<div class="click">
							<img src=<%= category.img %>>
							<h3><%= category.name %></h3>
						</div>
						<img src="/img/Triangle.png">
					</div>
				<% }); %>
			</div>

			<div id="right">
				<img src="/img/Right.png"/>
			</div>
		</div>

		<div id="featured">
			<% featured.forEach(function(feature) { %>
				<div class="featured-item">
					<a href="/recipes/<%-feature.recipeID%>"><img src=<%= feature.recipeImg %>></a>
					<div class="reveal">
						<h1><%= feature.recipeName %></h1>
						<h1><%= feature.recipeName %></h1>
						<p><%= feature.description %></p>
						<div class="recipe-data">
							<img src="/img/Steps.png"/>
							<h5>12</h5> <!-- gallery[i].stepCount -->
							<img src="/img/Ingredients.png"/>
							<h5>10</h5>	<!-- gallery[i].ingredientCount -->			
							<img src="/img/Clock.png"/>
							<h5>1:00</h5> <!-- gallery[i].duration -->
						</div>
					</div>
				</div>
			<% }); %>
		</div>
	</div>

	<!-- Includes the alternating side recipes and the aside with tips and ads -->
	<div id="gallery-and-aside">
		<!-- Includes the alternating side recipes -->
		<div id="gallery">
			<% for (var i=0; i<gallery.length; i++) { %>
				<div class="gallery-item">
					<a href="/recipes/<%-gallery[i].recipeID%>"><img src=<%= gallery[i].recipeImg %>></a>
					<div class="gallery-item-info">
						<h3><%= galleryTitles[i] %></h3>
						<h1><%= gallery[i].recipeName %></h1>
						<p><%= gallery[i].description %></p>
						<div class="recipe-data">
							<img src="/img/Steps.png"/>
							<h5>12</h5> <!-- gallery[i].stepCount -->
							<img src="/img/Ingredients.png"/>
							<h5>10</h5>	<!-- gallery[i].ingredientCount -->			
							<img src="/img/Clock.png"/>
							<h5>1:00</h5> <!-- gallery[i].duration -->
						</div>
					</div>
				</div>
			<% } %>
		</div>

		<!-- Includes the tips and tricks, and possible ads -->
		<aside>
			<!-- Includes daily tips -->
			<div id="tips">
				<% tips.forEach(function(tip) {%>
					<div class="tip">
						<h3>Tip of the day <%= tip.date %></h3>
						<p><%= tip.text %></p>
					</div>
				<% }); %>
			</div>

			<!-- Includes ads -->
			<div></div>
		</aside>
	</div>

	<div id="killer">
		<h4>Have a killer recipe? To see if itâ€™s a good fit for our site, send it to <span class="link">recipes@thenewcookbook.com</span></h4>
	</div>
	<% include ../partials/footer %>

</body>
</html>